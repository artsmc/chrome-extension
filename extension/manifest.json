{
  "manifest_version": 3,
  "name": "Website Comment Chrome Extension New",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "http://*/", "https://*/"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.ts"],
      "css": ["styles.css"]
    }
  ]
}

